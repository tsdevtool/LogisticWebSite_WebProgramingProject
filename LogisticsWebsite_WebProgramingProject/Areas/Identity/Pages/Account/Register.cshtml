@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link href="~/css/loginform.css" rel="stylesheet" />


<div class="wrapper">
    <div class="login-box">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="login-header">
                <span>Register</span>
            </div>
            @* <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> *@
            <div class="input-box">
                <input asp-for="Input.Email" type="text"  id="user" class="form-control input-field" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Email" class="label">Email</label>
                <i class="bx bx-user icon" asp-validation-for="Input.Email"></i>
            </div>
            <div class="input-box">
                <input asp-for="Input.Password" id="user" class="form-control input-field" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="label">Password</label>
                <i class="bx bx-user icon" asp-validation-for="Input.Password"></i>
            </div>
            <div class="input-box">
                <input asp-for="Input.ConfirmPassword" id="user" class="form-control input-field" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.ConfirmPassword" class="label">Confirm Password</label>
                <i asp-validation-for="Input.ConfirmPassword" class="bx bx-user icon"></i>
            </div>
            @*Full Name*@
            <div class="input-box">
                <input asp-for="Input.FullName" class="form-control input-field" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.FullName" class="label">Full Name</label>
                <i asp-validation-for="Input.FullName" class="bx bx-user icon"></i>
            </div>
            @*Country/Region*@
            <div class="input-box">
                <input asp-for="Input.CountryRegion" id="user" class="form-control input-field" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.CountryRegion" class="label">Country/Region</label>
                <i asp-validation-for="Input.CountryRegion" class="bx bx-user icon"></i>
            </div>
            <button id="registerSubmit" type="submit" class="input-submit">Register</button>
        </form>
    </div>
